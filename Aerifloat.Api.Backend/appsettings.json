{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "FormatterName": "json",
          "FormatterOptions": {
            "SingleLine": true,
            "IncludeScopes": true,
            "UseUtcTimestamp": true,
            "TimestampFormat": "HH:mm:ss",
            "JsonWriterOptions": {
              "Indented": true
            }
          }
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}